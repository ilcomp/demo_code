<div class="pos-sticky">
  <div class="order-sidebar">
    <div class="order-list">
  {% for product in products %}
      <div class="order-list__item d-flex">
        <a href="{{ product.href }}"><img src="{{ product.thumb }}" class="img-fluid"></a>
        <div class="info-order-sidebar">
          <div class="info-order-sidebar__name">{{ product.title }}</div>
          <div class="d-flex">
            <div>Кол-во: {{ product.quantity }}</div>&nbsp;<div>Сумма: {{ product.total_format }}</div>
          </div>
        </div>
      </div>
  {% endfor %}
    </div>
    <div class="order-sidebar__discount">
    {% for total in totals %}
      {% if total.code == 'reward' %}
      <div class="text-order-sidebar">
        <div>{{ total.title }}:</div><div>{{ total.value > 0 ? '+' }}{{ total.value }}</div>
      </div>
      {% elseif total.code != 'total' and total.code != 'sub_total' %}
      <div class="text-order-sidebar">
        <div>{{ total.title }}:</div><div>{{ total.text|replace({'₽': '<span>₽</span>'}) }}</div>
      </div>
      {% endif %}
    {% endfor %}
    </div>
    <div class="order-sidebar__total">
    {% for total in totals %}
      {% if total.code == 'total' %}
      <div class="text-order-sidebar">
        <div>{{ total.title }}:</div><div>{{ total.text|replace({'₽': '<span>₽</span>'}) }}</div>
      </div>
      {% endif %}
    {% endfor %}
    </div>
  </div>
</div>