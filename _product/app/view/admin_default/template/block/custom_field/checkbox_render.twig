<div class="form-group row custom-field" data-sort="{{ custom_field.sort_order }}">
  <label class="col-sm-2 col-form-label">{{ custom_field.name }}</label>
  <div class="col-sm-10">
    {% if custom_field.listing_items %}
    {% for listing_item in custom_field.listing_items %}
      <label class="form-check">
      {% if listing_item.listing_item_id in custom_field.value[-1] %}
        <input type="checkbox" name="custom_field[{{ custom_field.custom_field_id }}][-1][]" value="{{ listing_item.listing_item_id }}" checked="checked" class="form-check-input"/> {{ listing_item.name }}
      {% else %}
        <input type="checkbox" name="custom_field[{{ custom_field.custom_field_id }}][-1][]" value="{{ listing_item.listing_item_id }}" class="form-check-input"/> {{ listing_item.name }}
      {% endif %}
      </label>
    {% endfor %}
    {% else %}
      <label class="form-check"><input type="checkbox" name="custom_field[{{ custom_field.custom_field_id }}][-1]" value="1" class="form-check-input"{{ custom_field.value[-1] ? ' checked' }}/></label>
    {% endif %}
    {% if error_custom_field[custom_field.custom_field_id] %}
      <div class="invalid-tooltip">{{ error_custom_field[custom_field.custom_field_id] }}</div>
    {% endif %}
  </div>
</div>