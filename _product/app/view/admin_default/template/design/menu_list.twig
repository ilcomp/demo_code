{% import "admin_default/template/macro/button.twig" as macro_button %}
<div class="card">
  <div class="card-header"><i class="fas fa-list"></i> {{ text_list }}</div>
  <div class="card-body">
    <form action="{{ actions.delete }}" method="post" enctype="multipart/form-data" id="form-general" data-form="menu">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
              <td class="text-left">{{ column_name }}</td>
              <td class="text-left">{{ column_position }}</td>
              <td class="text-left">{{ column_status }}</td>
              <td class="text-right">{{ column_action }}</td>
            </tr>
          </thead>
          <tbody>
            {% if menus %}
            {% for menu in menus %}
            <tr>
              <td class="text-center">{% if menu.menu_id in selected %}
                <input type="checkbox" name="selected[]" value="{{ menu.menu_id }}" checked="checked" />
                {% else %}
                <input type="checkbox" name="selected[]" value="{{ menu.menu_id }}" />
                {% endif %}</td>
              <td class="text-left">{{ menu.name }}</td>
              <td class="text-left">{{ menu.position }}</td>
              <td class="text-left">{{ menu.status }}</td>
              <td class="text-right">{{ macro_button.link_edit(menu.edit, button_edit) }}</td>
            </tr>
            {% endfor %}
            {% else %}
            <tr>
              <td class="text-center" colspan="7">{{ text_no_results }}</td>
            </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </form>
  </div>
</div>