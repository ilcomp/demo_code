<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_form }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="price">
      <div class="form-group row required">
        <label class="col-sm-2 col-form-label">{{ entry_name }}</label>
        <div class="col-sm-10">
        {% for language in languages %}
          <div class="input-group">
            <div class="input-group-prepend"><span class="input-group-text"><img src="{{ language.image }}" title="{{ language.name }}"/></span></div>
            <input type="text" name="price_description[{{ language.language_id }}][name]" value="{{ price_description[language.language_id] is defined ? price_description[language.language_id].name }}" placeholder="{{ entry_name }}" class="form-control"/>
          </div>
          {% if error_name[language.language_id] %}
            <div class="invalid-tooltip">{{ error_name[language.language_id] }}</div>
          {% endif %}
        {% endfor %}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-currency">{{ entry_currency }}</label>
        <div class="col-sm-10">
          <select name="currency_id" id="input-currency" class="form-control">
            <option value="0" selected="selected">{{ text_none }}</option>
          {% for currency in currencies %}
            {% if currency.currency_id == currency_id %}
            <option value="{{ currency.currency_id }}" selected="selected">{{ currency.name }}</option>
            {% else %}
            <option value="{{ currency.currency_id }}">{{ currency.name }}</option>
            {% endif %}
          {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-main">{{ entry_main }}</label>
        <div class="col-sm-10">
          <select name="main" id="input-main" class="form-control">
            {% if main %}
            <option value="1" selected="selected">{{ text_enabled }}</option>
            <option value="0">{{ text_disabled }}</option>
            {% else %}
            <option value="1">{{ text_enabled }}</option>
            <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}
          </select>
        </div>
      </div>
    </form>
  </div>
</div>