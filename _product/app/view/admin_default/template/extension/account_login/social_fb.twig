<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="menu">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
        <div class="col-sm-10">
          <select name="account_login_social_fb_status" id="input-status" class="form-control">
            {% if account_login_social_fb_status %}
              <option value="1" selected="selected">{{ text_enabled }}</option>
              <option value="0">{{ text_disabled }}</option>
            {% else %}
              <option value="1">{{ text_enabled }}</option>
              <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-api_id">{{ entry_api_id }}</label>
        <div class="col-sm-10">
          <input type="text" name="account_login_social_fb_api_id" value="{{ account_login_social_fb_api_id }}" placeholder="{{ entry_api_id }}" id="input-api_id" class="form-control"/>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-user_id">{{ entry_user_id }}</label>
        <div class="col-sm-10">
          <input type="text" name="account_login_social_fb_user_id" value="{{ account_login_social_fb_user_id }}" placeholder="{{ entry_user_id }}" id="input-user_id" class="form-control"/>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-secret_key">{{ entry_secret_key }}</label>
        <div class="col-sm-10">
          <input type="password" name="account_login_social_fb_secret_key" value="{{ account_login_social_fb_secret_key }}" placeholder="{{ entry_secret_key }}" id="input-secret_key" class="form-control"/>
        </div>
      </div>
    </form>
  </div>
</div>