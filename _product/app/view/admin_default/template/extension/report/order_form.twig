<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="total">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
        <div class="col-sm-10">
          <select name="report_sale_order_status" id="input-status" class="form-control">
            {% if report_sale_order_status %}
              <option value="1" selected="selected">{{ text_enabled }}</option>
              <option value="0">{{ text_disabled }}</option>
            {% else %}
              <option value="1">{{ text_enabled }}</option>
              <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-sort-order">{{ entry_sort_order }}</label>
        <div class="col-sm-10">
          <input type="text" name="report_sale_order_sort_order" value="{{ report_sale_order_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
        </div>
      </div>
    </form>
  </div>
</div>