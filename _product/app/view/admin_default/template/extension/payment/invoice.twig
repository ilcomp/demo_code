<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="payment" class="form-horizontal">
      <div class="form-group row">
        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
        <div class="col-sm-10">
          <select name="payment_invoice_status" id="input-status" class="form-control">
            {% if payment_invoice_status %}
            <option value="1" selected="selected">{{ text_enabled }}</option>
            <option value="0">{{ text_disabled }}</option>
            {% else %}
            <option value="1">{{ text_enabled }}</option>
            <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
        <div class="col-sm-10">
          <select name="payment_invoice_order_status_id" id="input-order-status" class="form-control">
            {% for order_status in order_statuses %}
            {% if order_status.listing_item_id == payment_invoice_order_status_id %}
            <option value="{{ order_status.listing_item_id }}" selected="selected">{{ order_status.name }}</option>
            {% else %}
            <option value="{{ order_status.listing_item_id }}">{{ order_status.name }}</option>
            {% endif %}
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
        <div class="col-sm-10">
          <input type="text" name="payment_invoice_sort_order" value="{{ payment_invoice_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
        </div>
      </div>
    </form>
  </div>
</div>