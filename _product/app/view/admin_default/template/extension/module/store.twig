<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" data-form="module">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">{{ entry_admin }}</label>
        <div class="col-sm-10">
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            {% if module_store_admin %}
              <label class="btn btn-success active"><input type="radio" name="module_store_admin" value="1" checked="checked"/> {{ text_yes }}</label>
              <label class="btn btn-danger"><input type="radio" name="module_store_admin" value="0"/> {{ text_no }}</label>
            {% else %}
              <label class="btn btn-success"><input type="radio" name="module_store_admin" value="1"/> {{ text_yes }}</label>
              <label class="btn btn-danger active"><input type="radio" name="module_store_admin" value="0" checked="checked"/> {{ text_no }}</label>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
        <div class="col-sm-10">
          <select name="module_store_status" id="input-status" class="form-control">
            <option value="1"{{ status ? ' selected' }}>{{ text_enabled }}</option>
            <option value="0"{{ not status ? ' selected' }}>{{ text_disabled }}</option>
          </select>
        </div>
      </div>
    </form>
  </div>
</div>