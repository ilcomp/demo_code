<div class="card">
  <div class="card-header"><i class="fas fa-list"></i> {{ text_list }}</div>
  <div class="card-body">
    <form action="{{ actions.delete }}" method="post" enctype="multipart/form-data" id="form-general" data-form="account-group">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').trigger('click');"/></td>
              <td class="text-left">{% if sort == 'cgd.name' %}
                  <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
                {% else %}
                  <a href="{{ sort_name }}">{{ column_name }}</a>
                {% endif %}</td>
              <td class="text-right">{% if sort == 'cg.sort_order' %}
                  <a href="{{ sort_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                {% else %}
                  <a href="{{ sort_sort_order }}">{{ column_sort_order }}</a>
                {% endif %}</td>
              <td class="text-right">{{ column_action }}</td>
            </tr>
          </thead>
          <tbody>
            {% if account_groups %}
              {% for account_group in account_groups %}
                <tr>
                  <td class="text-center">{% if account_group.account_group_id in selected %}
                      <input type="checkbox" name="selected[]" value="{{ account_group.account_group_id }}" checked="checked"/>
                    {% else %}
                      <input type="checkbox" name="selected[]" value="{{ account_group.account_group_id }}"/>
                    {% endif %}</td>
                  <td class="text-left">{{ account_group.name }}</td>
                  <td class="text-right">{{ account_group.sort_order }}</td>
                  <td class="text-right"><a href="{{ account_group.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a></td>
                </tr>
              {% endfor %}
            {% else %}
              <tr>
                <td class="text-center" colspan="4">{{ text_no_results }}</td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </form>
    <div class="row">
      <div class="col-sm-6 text-left">{{ pagination }}</div>
      <div class="col-sm-6 text-right">{{ results }}</div>
    </div>
  </div>
</div>