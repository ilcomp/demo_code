<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<script type="text/javascript">history.replaceState(null,null, decodeURIComponent(location.href.replace(/[&\?]?\w+=(?=&|$)/g, '')));</script>

<title>{{ title }}</title>
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}

<base href="{{ base }}"/>
{% for link in links %}
<link href="{{ link.link }}" rel="{{ link.rel }}" />
{% endfor %}

{% for style in styles %}
<link rel="{{ style.rel }}" href="{{ style.link }}" media="{{ style.media }}" />
{% endfor %}

<script type="text/javascript" src="assets/jquery/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="assets/popper/popper.min.js"></script>
<script type="text/javascript" src="assets/bootstrap-4.1.3/dist/js/bootstrap.min.js"></script>
<!-- <script type="text/javascript" src="assets/bootstrap-4.1.3/js/dist/util.js" defer></script>
<script type="text/javascript" src="assets/bootstrap-4.1.3/js/dist/collapse.js" defer></script>
<script type="text/javascript" src="assets/bootstrap-4.1.3/js/dist/tab.js" defer></script>
<script type="text/javascript" src="assets/bootstrap-4.1.3/js/dist/modal.js" defer></script> -->
<script type="text/javascript" src="assets/maskedinput/jquery.maskedinput.min.js" defer></script>

{% for script in scripts %}
<script type="text/javascript" src="{{ script.link }}" {{ script.type }}></script>
{% endfor %}

{% for analytic in analytics %}
{{ analytic }}
{% endfor %}

</head>
<body>

<header>
  <div class="container-fluid">
    <div class="row">
      <div class="col-4 col-sm-2">
        <a class="navbar-brand" href="{{ home }}">
          {% if logo %}
          <img src="{{ logo }}" class="img-responsive" alt="{{ name|replace({'"':''}) }}">
          {% endif %}
          <div class="logo_text">{{ name }}</div>
        </a>
      </div>
      <div class="col-4 col-sm-2 navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu_header">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div>{{ comment }}</div>
      </div>
      <div class="col-4 col-sm-8 text-right">
        <ul class="list-inline">
          <li class="list-inline-item">{{ language }}</li>
          <li class="list-inline-item">{{ search_form }}</li>
          <li class="list-inline-item">{{ cart }}</li>
        </ul>
      </div>
    </div>
  </div>
</header>

<nav class="collapse position-absolute bg-white w-100" id="menu_header">
  <div class="container-fluid">
    {{ menu.general.view }}
    {{ menu.header_catalog.view }}
  </div>
</nav>