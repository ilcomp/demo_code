# Auto detect text files and perform LF normalization
* text=auto
*.css   text eol=lf
*.html  text eol=lf
*.js    text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.rb    text eol=lf
*.scss  text eol=lf
*.svg   text eol=lf
*.txt   text eol=lf
*.xml   text eol=lf
*.yml   text eol=lf
*.php   text eol=lf
*.twig   text eol=lf

# Ignore specific directories / files when using export
.gitattributes export-ignore
.gitignore export-ignore