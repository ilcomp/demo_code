<div class="form-group row custom-field" data-sort="{{ custom_field.sort_order }}">
  <label class="col-sm-2 col-form-label">{{ custom_field.name }}</label>
  <div class="col-sm-10">
    <div>
    {% for listing_item in custom_field.listing_items %}
      <label class="form-check">
      {% if listing_item.listing_item_id == custom_field.value[-1] %}
        <input type="radio" name="custom_field[{{ custom_field.custom_field_id }}][-1]" value="{{ listing_item.listing_item_id }}" checked="checked" class="form-check-input"/> {{ listing_item.name }}
      {% else %}
        <input type="radio" name="custom_field[{{ custom_field.custom_field_id }}][-1]" value="{{ listing_item.listing_item_id }}" class="form-check-input"/> {{ listing_item.name }}
      {% endif %}
      </label>
    {% endfor %}
    </div>
    {% if error_custom_field[custom_field.custom_field_id] %}
      <div class="invalid-tooltip">{{ error_custom_field[custom_field.custom_field_id] }}</div>
    {% endif %}</div>
</div>