<div class="form-group row custom-field" data-sort="{{ custom_field.sort_order }}">
  <label class="col-sm-2 col-form-label">{{ custom_field.name }}</label>
  <div class="col-sm-10">
    <div class="card" style="width: 12rem;">
      <img src="{{ custom_field.value[-1].thumb }}" alt="" title="" id="custom_field-thumb{{ custom_field.custom_field_id }}" data-placeholder="{{ placeholder }}" class="card-img-top"/> <input type="hidden" name="custom_field[{{ custom_field.custom_field_id }}][-1]" value="{{ custom_field.value[-1].image }}" id="custom_field-input{{ custom_field.custom_field_id }}"/>
      <div class="card-body">
        <button type="button" data-toggle="image" data-target="#custom_field-input{{ custom_field.custom_field_id }}" data-thumb="#custom_field-thumb{{ custom_field.custom_field_id }}" class="btn btn-primary btn-sm btn-block"><i class="fas fa-pencil-alt"></i> {{ button_edit }}</button>
        <button type="button" data-toggle="clear" data-target="#custom_field-input{{ custom_field.custom_field_id }}" data-thumb="#custom_field-thumb{{ custom_field.custom_field_id }}" class="btn btn-warning btn-sm btn-block"><i class="fas fa-trash-alt"></i> {{ button_clear }}</button>
      </div>
    </div>
    <small class="form-text text-muted">{{ custom_field.value[-1].image  }}</small>
    <small class="form-text text-muted">{{ custom_field.setting.width }} x {{ custom_field.setting.height }}</small>
  </div>
</div>