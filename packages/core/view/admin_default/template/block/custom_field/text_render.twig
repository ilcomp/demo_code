<div class="form-group row custom-field" data-sort="{{ custom_field.sort_order }}">
  <label class="col-sm-2 col-form-label" for="input-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
  <div class="col-sm-10">
  {% if custom_field.multilanguage %}
    {% for language in languages %}
    <div class="input-group">
      <div class="input-group-prepend"><span class="input-group-text"><img src="/image/language/{{ language.code }}.png" title="{{ language.name }}"/></span></div>
      <input type="text" name="custom_field[{{ custom_field.custom_field_id }}][{{ language.language_id }}]" value="{{ custom_field.value[language.language_id] ? custom_field.value[language.language_id] : custom_field.setting.default }}" placeholder="{{ custom_field.name }}" class="form-control"/>
    </div>
    {% endfor %}
  {% else %}
    <input type="text" name="custom_field[{{ custom_field.custom_field_id }}][-1]" value="{{ custom_field.value[-1] }}" placeholder="{{ custom_field.name }}" id="input-custom-field{{ custom_field.custom_field_id }}" class="form-control"/>
    {% if error_custom_field[custom_field.custom_field_id] %}
      <div class="invalid-tooltip">{{ error_custom_field[custom_field.custom_field_id] }}</div>
    {% endif %}
  {% endif %}
  </div>
</div>