{% import "admin_default/template/macro/form_group.twig" as macros %}
<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_form }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="listing_item">
      <div class="form-group row required">
        <label class="col-sm-2 col-form-label">{{ entry_name }}</label>
        <div class="col-sm-10">
        {% for language in languages %}
          <div class="input-group">
            <div class="input-group-prepend"><span class="input-group-text"><img src="/image/language/{{ language.code }}.png" title="{{ language.name }}"/></span></div>
            <input type="text" name="description[{{ language.language_id }}][name]" value="{{ description[language.language_id] ? description[language.language_id].name }}" placeholder="{{ entry_name }}" class="form-control"/>
          </div>
          {% if error_name[language.language_id] %}
            <div class="invalid-tooltip">{{ error_name[language.language_id] }}</div>
          {% endif %}
        {% endfor %}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">{{ entry_description }}</label>
        <div class="col-sm-10">
        {% for language in languages %}
          <div class="input-group">
            <div class="input-group-prepend"><span class="input-group-text"><img src="/image/language/{{ language.code }}.png" title="{{ language.name }}"/></span></div>
            <input type="text" name="description[{{ language.language_id }}][description]" value="{{ description[language.language_id] ? description[language.language_id].description }}" placeholder="{{ entry_description }}" class="form-control"/>
          </div>
        {% endfor %}
        </div>
      </div>
      {{ macros.text(
        {'id': 'value', 'name' : 'value', 'value' : value},
        {'label' : entry_value, 'placeholder' : entry_value}
      ) }}
      {{ macros.image(
        {'id': 'image', 'name' : 'image', 'value' : image},
        {'label' : entry_image, 'placeholder' : placeholder, 'edit' : button_edit, 'clear' : button_clear},
        {'thumb' : thumb}
      ) }}
      {{ macros.text(
        {'id': 'sort_order', 'name' : 'sort_order', 'value' : sort_order},
        {'label' : entry_sort_order, 'placeholder' : entry_sort_order}
      ) }}
    </form>
  </div>
</div>