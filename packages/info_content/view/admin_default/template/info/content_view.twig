<div class="form-group row">
  <label class="col-sm-2 col-form-label" for="input-content_status">{{ entry_content_status }}</label>
  <div class="col-sm-10">
    <select name="content_status" id="input-content_status" class="form-control">
      {% if content_status %}
      <option value="1" selected="selected">{{ text_enabled }}</option>
      <option value="0">{{ text_disabled }}</option>
      {% else %}
      <option value="1">{{ text_enabled }}</option>
      <option value="0" selected="selected">{{ text_disabled }}</option>
      {% endif %}
    </select>
  </div>
</div>