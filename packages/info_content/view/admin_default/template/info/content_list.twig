<div class="card">
  <div class="card-header"><i class="fas fa-list"></i> {{ text_list }}</div>
  <div class="card-body">
    <form action="{{ actions.delete }}" method="post" enctype="multipart/form-data" id="form-general" data-form="content">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').trigger('click');"/></td>
              <td class="text-left">{{ column_name }}</td>
              <td class="text-right">{{ column_sort_order }}</td>
              <td class="text-right">{{ column_action }}</td>
            </tr>
          </thead>
          <tbody>
            {% if contents %}
              {% for content in contents %}
                <tr>
                  <td class="text-center">{% if content.content_id in selected %}
                      <input type="checkbox" name="selected[]" value="{{ content.content_id }}" checked="checked"/>
                    {% else %}
                      <input type="checkbox" name="selected[]" value="{{ content.content_id }}"/>
                    {% endif %}</td>
                  <td class="text-left">{{ content.name }}</td>
                  <td class="text-right">{{ content.sort_order }}</td>
                  <td class="text-right"><a href="{{ content.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a></td>
                </tr>
              {% endfor %}
            {% else %}
              <tr>
                <td class="text-center" colspan="4">{{ text_no_results }}</td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </form>
    <div class="row">
      <div class="col-sm-6 text-left">{{ pagination }}</div>
      <div class="col-sm-6 text-right">{{ results }}</div>
    </div>
  </div>
</div>