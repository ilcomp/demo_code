<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_form }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="stock">
      <div class="form-group row required">
        <label class="col-sm-2 col-form-label">{{ entry_name }}</label>
        <div class="col-sm-10">
        {% for language in languages %}
            <div class="input-group">
              <div class="input-group-prepend"><span class="input-group-text"><img src="{{ language.image }}" title="{{ language.name }}"/></span></div>
              <input type="text" name="stock_description[{{ language.language_id }}][name]" value="{{ stock_description[language.language_id] is defined ? stock_description[language.language_id].name }}" placeholder="{{ entry_name }}" class="form-control"/>
            </div>
            {% if error_name[language.language_id] %}
              <div class="invalid-tooltip">{{ error_name[language.language_id] }}</div>
            {% endif %}
        {% endfor %}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-location">{{ entry_location }}</label>
        <div class="col-sm-10">
          <select name="location_id" id="input-location" class="form-control">
            <option value="0" selected="selected">{{ text_none }}</option>
          {% for location in locations %}
            {% if location.location_id == location_id %}
            <option value="{{ location.location_id }}" selected="selected">{{ location.name }}</option>
            {% else %}
            <option value="{{ location.location_id }}">{{ location.name }}</option>
            {% endif %}
          {% endfor %}
          </select>
        </div>
      </div>
    </form>
  </div>
</div>