<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="mail">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
        <div class="col-sm-10">
          <select name="stock_status" id="input-status" class="form-control">
            {% if stock_status %}
              <option value="1" selected="selected">{{ text_enabled }}</option>
              <option value="0">{{ text_disabled }}</option>
            {% else %}
              <option value="1">{{ text_enabled }}</option>
              <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-listing_status">{{ entry_listing_status }}</label>
        <div class="col-sm-10">
          <select name="stock_listing_status" id="input-listing_status" class="form-control">
            <option value="">{{ text_none }}</option>
          {% for listing in listings %}
            {% if listing.listing_id == stock_status_listing %}
              <option value="{{ listing.listing_id }}" selected="selected">{{ listing.name }}</option>
            {% else %}
              <option value="{{ listing.listing_id }}">{{ listing.name }}</option>
            {% endif %}
          {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-weight_class">{{ entry_weight_class }}</label>
        <div class="col-sm-10">
          <select name="stock_weight_class" id="input-weight_class" class="form-control">
            <option value="">{{ text_none }}</option>
          {% for item in weight_classes %}
            {% if item.weight_class_id == stock_weight_class %}
              <option value="{{ item.weight_class_id }}" selected="selected">{{ item.name }}</option>
            {% else %}
              <option value="{{ item.weight_class_id }}">{{ item.name }}</option>
            {% endif %}
          {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-length_class">{{ entry_length_class }}</label>
        <div class="col-sm-10">
          <select name="stock_length_class" id="input-length_class" class="form-control">
            <option value="">{{ text_none }}</option>
          {% for item in length_classes %}
            {% if item.length_class_id == stock_length_class %}
              <option value="{{ item.length_class_id }}" selected="selected">{{ item.name }}</option>
            {% else %}
              <option value="{{ item.length_class_id }}">{{ item.name }}</option>
            {% endif %}
          {% endfor %}
          </select>
        </div>
      </div>
      <fieldset>
        <legend>{{ text_image }}</legend>
        {% for image_name, image_size in stock_image %}
        <div class="form-group row">
          <label class="col-sm-2 col-form-label" for="input-image-{{ image_name }}">{{ image_size.name }}</label>
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-6">
                <input type="text" name="stock_image_{{ image_name }}_width" value="{{ image_size.width }}" placeholder="{{ entry_width }}" id="input-image-{{ image_name }}" class="form-control"/>
              </div>
              <div class="col-sm-6">
                <input type="text" name="stock_image_{{ image_name }}_height" value="{{ image_size.height }}" placeholder="{{ entry_height }}" class="form-control"/>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </fieldset>
    </form>
  </div>
</div>