<section id="account-password" class="lk_profile">
  <div class="container">
    <h2>{{ heading_title }}</h2>
    {% if error_password %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_password }}</div>
    {% endif %}
    {% if error_confirm %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_confirm }}</div>
    {% endif %}
    <form action="{{ action }}" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <div class="callback_input">
            <div>{{ entry_password }}</div>
            <input type="password" name="password" value="{{ password }}">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <div class="callback_input">
            <div>{{ entry_confirm }}</div>
            <input type="password" name="confirm" value="{{ confirm }}">
          </div>
        </div>
      </div>
      <button type="submit"class="other_btn">{{ button_continue }}</button>
    </form>
  </div>
</section>