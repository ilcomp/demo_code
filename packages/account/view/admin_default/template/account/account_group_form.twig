<div class="card">
  <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_form }}</div>
  <div class="card-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-general" data-form="account-group">
      <div class="form-group row required">
        <label class="col-sm-2 col-form-label">{{ entry_name }}</label>
        <div class="col-sm-10">
          {% for language in languages %}
            <div class="input-group">
              <div class="input-group-prepend"><span class="input-group-text"><img src="{{ language.image }}" title="{{ language.name }}"/></span></div>
              <input type="text" name="account_group_description[{{ language.language_id }}][name]" value="{{ account_group_description[language.language_id] ? account_group_description[language.language_id].name }}" placeholder="{{ entry_name }}" class="form-control"/>
            </div>
            {% if error_name[language.language_id] %}
              <div class="invalid-tooltip">{{ error_name[language.language_id] }}</div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      {% for language in languages %}
        <div class="form-group row">
          <label class="col-sm-2 col-form-label" for="input-description{{ language.language_id }}">{{ entry_description }}</label>
          <div class="col-sm-10">
            <div class="input-group">
              <div class="input-group-prepend"><span class="input-group-text"><img src="{{ language.image }}" title="{{ language.name }}"/></span></div>
              <textarea name="account_group_description[{{ language.language_id }}][description]" rows="5" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" class="form-control">{{ account_group_description[language.language_id] ? account_group_description[language.language_id].description }}</textarea>
            </div>
          </div>
        </div>
      {% endfor %}
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">{{ entry_approval }}</label>
        <div class="col-sm-10">
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            {% if approval %}
              <label class="btn btn-success active"><input type="radio" name="approval" value="1" checked="checked"/> {{ text_yes }}</label>
              <label class="btn btn-danger"><input type="radio" name="approval" value="0"/> {{ text_no }}</label>
            {% else %}
              <label class="btn btn-success"><input type="radio" name="approval" value="1"/> {{ text_yes }}</label>
              <label class="btn btn-danger active"><input type="radio" name="approval" value="0" checked="checked"/> {{ text_no }}</label>
            {% endif %}
          </div>
          <small class="form-text text-muted">{{ help_approval }}</small>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="input-sort-order">{{ entry_sort_order }}</label>
        <div class="col-sm-10">
          <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
        </div>
      </div>
    </form>
  </div>
</div>